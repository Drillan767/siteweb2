
<div class="col-md-4 col-md-offset-4 articles-body">


  <h1 class="text-center">Connexion</h1>
  <div class="col-md-8 col-md-offset-2">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, class: 'contacts-input' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: 'off', class: 'contacts-input' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Rester connectÃ©' %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit 'Connexion' %>
    </div>
  <% end %>
  </div>
</div>